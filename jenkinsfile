pipeline{
    agent any
    parameters {
        // string(name: 'ENV', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
        // text(name: 'BIOGRAPHY', defaultValue: '', description: 'Enter some information about the person')
        // booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')
        choice(name: 'ENV', choices: ['dev', 'prod'], description: 'Select the Environment')
        choice(name: 'ACTION', choices: ['init', 'plan', 'apply', 'destroy'], description: 'Select the Action')
        // password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    }
    stages{
        stage("Terraform init"){
            steps{
                sh "terrafile -f env-dev/Terrafile"
                sh "terraform ${ACTION} -backend-config=env-${ENV}/${ENV}-backend.tfvars"
            }
            
        }
        stage("Terraform plan"){
            steps {
                sh "terraform ${ACTION} -var-file=env-${ENV}/${ENV}.tfvars"
            }
        }    
        stage("Terraform apply"){
            steps {
                sh "terraform ${ACTION} -auto-approve -var-file=env-${ENV}/${ENV}.tfvars"
            }
        }
    }
    
}    